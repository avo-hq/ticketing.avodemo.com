<turbo-frame id="settings_frame">
  <div class="flex flex-col">
      <%= render Avo::TutorialComponent.new(message: "On this page it's possible to customize your BO experience. It's build with custom styles that integrates with the avo tailwind styles.", user: current_user) %>
    <%= render Avo::PanelComponent.new(name: 'Settings', display_breadcrumbs: true) do |c| %>
      <% c.with_body do %>
        <div class="flex flex-col justify-center py-6">
          <div class="px-6 space-y-4">
            <%= form_for(:settings, url: main_app.settings_path) do |form| %>
              <%= form.hidden_field :user_id, value: current_user.id %>
              <label for="settings_tutorial" class="flex items-center cursor-pointer">
                <div class="relative">
                  <%= form.check_box :tutorial, class: "sr-only", onchange: "this.form.requestSubmit();", checked: current_user.settings["tutorial"] %>
                  <div class="block bg-gray-600 w-10 h-6 rounded-full"></div>
                  <div class="dot absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition"></div>
                </div>
                <div class="ml-3 text-gray-700 font-medium">
                  Tutorials
                </div>
              </label>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</turbo-frame>